<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bgDark">
            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/top100_cardview_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/bgDark"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/top100_img_child_item"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/top100_cardview_img"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@id/top100_cardview_img"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/top100_child_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>