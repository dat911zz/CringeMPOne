<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_holder"
    tools:context=".ui.musicplayer.PlayerActivity"
    android:background="@drawable/gradient_background_theme_1">
    <RelativeLayout
        android:id="@+id/navigation_header_container"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBackToMainActivity"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_keyboard_arrow_down_24"/>
        <TextView
            android:id="@+id/player_top_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="ThÃ´ng tin"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigation_header_container"
        android:layout_above="@id/media_actions"
        android:id="@+id/media_fragment_holder">
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pager_indicator"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            app:dotsColor="@color/colorPrimaryDark"
            app:selectedDotColor="@color/teal_200"
            app:dotsSize="10dp"
            app:dotsSpacing="5dp"
            app:progressMode="true"/>
        <androidx.viewpager.widget.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_below="@id/pager_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/media_actions"
        >
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/play"
            android:splitTrack="false"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:thumb="@drawable/seekbar_thumb_player"
            android:progressDrawable="@drawable/seekbar_progress"
            android:background="#00222552"/>

        <TextView
            android:id="@+id/txtStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="30dp"
            android:text="0.25"
            android:textColor="#ffecb3"
            />
        <TextView
            android:id="@+id/txtEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="30dp"
            android:text="0.25"
            android:textColor="#ffecb3"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/baseline_play_arrow_24"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/skipPrev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_skip_previous_24"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/play"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="110dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shuffle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_shuffle_24"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/skipPrev"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/skipNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_skip_next_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/play"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="110dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_loop_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/play"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            />
    </RelativeLayout>

</RelativeLayout>