<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1c1f3e"
    tools:context=".ui.musicplayer.MainPlayerFragment">

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="22dp"
        android:text="Pháp Sư Music" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        app:cardCornerRadius="130dp"
        app:layout_constraintStart_toStartOf="@id/txtSongName"
        app:shapeAppearanceOverlay="@style/Circular"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgDisc"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:srcCompat="@mipmap/ic_disc_round" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Banh Não Đi Bạn"
        android:textColor="@color/textColor"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSongName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Banh Não Đi Bạn"
        android:textColor="@color/textSubtitleColor"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>
</RelativeLayout>