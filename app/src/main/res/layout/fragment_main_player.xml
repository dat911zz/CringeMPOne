<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1c1f3e"
    tools:context=".ui.fragment.MainPlayerFragment">

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="22dp"
        android:text="Pháp Sư Music" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgMainPlayer"
        android:layout_centerHorizontal="true"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@id/txtSongName"
        app:shapeAppearanceOverlay="@style/Circular"
        app:srcCompat="@mipmap/ic_disc_round" />
    <TextView
        android:id="@+id/txtSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgMainPlayer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Banh Não Đi Bạn"
        android:textColor="@color/textColor"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSongName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Banh Não Đi Bạn"
        android:textColor="@color/textSubtitleColor"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/media_actions"
        >
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/play"
            android:splitTrack="false"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:thumb="@drawable/seekbar_thumb_player"
            android:progressDrawable="@drawable/seekbar_progress"
            android:background="#00222552"/>

        <TextView
            android:id="@+id/txtStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="30dp"
            android:text="0.25"
            android:textColor="#ffecb3"
            />
        <TextView
            android:id="@+id/txtEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="30dp"
            android:text="0.25"
            android:textColor="#ffecb3"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/baseline_play_arrow_24"
            android:onClick="PlayButton"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/skipPrev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_skip_previous_24"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/play"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="110dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shuffle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_shuffle_24"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/skipPrev"
            android:layout_marginBottom="55dp"
            android:layout_marginLeft="30dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_skip_next_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/play"
            android:layout_marginBottom="45dp"
            android:layout_marginRight="110dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_loop_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/play"
            android:layout_marginBottom="55dp"
            android:layout_marginRight="30dp"
            />
    </RelativeLayout>

</RelativeLayout>